<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenieClient.Views"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="GenieClient.Views.AliasesDialog"
        Title="Aliases Configuration"
        Width="700" Height="500"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        CanResize="True">

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#16213e" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="AddButton" Content="âž• Add" 
                        Background="#166534" Foreground="White"
                        Padding="12,6" FontSize="12"
                        Click="OnAddClick"/>
                <Button x:Name="EditButton" Content="âœï¸ Edit" 
                        Background="#1e3a8a" Foreground="White"
                        Padding="12,6" FontSize="12"
                        Click="OnEditClick" IsEnabled="False"/>
                <Button x:Name="DeleteButton" Content="ðŸ—‘ï¸ Delete" 
                        Background="#7f1d1d" Foreground="White"
                        Padding="12,6" FontSize="12"
                        Click="OnDeleteClick" IsEnabled="False"/>
                <Border Width="1" Background="#333" Margin="4,2"/>
                <Button Content="ðŸ”„ Reload" 
                        Background="#1e3a5f" Foreground="White"
                        Padding="12,6" FontSize="12"
                        Click="OnReloadClick"/>
                <Button Content="ðŸ’¾ Save" 
                        Background="#166534" Foreground="White"
                        Padding="12,6" FontSize="12"
                        Click="OnSaveClick"/>
            </StackPanel>
        </Border>

        <!-- Aliases List -->
        <Border Grid.Row="1" Margin="8" Background="#0d1117" CornerRadius="8">
            <DataGrid x:Name="AliasesGrid"
                      x:DataType="local:AliasEntry"
                      Background="Transparent"
                      Foreground="#c9d1d9"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      SelectionChanged="OnSelectionChanged"
                      DoubleTapped="OnRowDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Alias Name" Binding="{Binding Key}" Width="150"/>
                    <DataGridTextColumn Header="Replacement Text" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Info Panel -->
        <Border Grid.Row="2" Margin="8,0,8,8" Background="#1e3a5f" CornerRadius="8" Padding="12">
            <StackPanel Spacing="8">
                <TextBlock Text="â„¹ï¸ About Aliases" FontWeight="SemiBold" Foreground="#60a5fa" FontSize="13"/>
                <TextBlock TextWrapping="Wrap" Foreground="#93c5fd" FontSize="12">
                    Aliases let you create shortcuts for longer commands. When you type an alias name,
                    it will be replaced with the full command text.
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="#888" FontSize="11" FontStyle="Italic">
                    Example: Alias "go" â†’ "go gate" will replace the command "go" with "go gate"
                </TextBlock>
                <TextBlock x:Name="StatusText" Text="Double-click to edit, or use buttons above" 
                           Foreground="#fbbf24" FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- Bottom buttons -->
        <Border Grid.Row="3" Background="#16213e" Padding="8">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBlock x:Name="CountText" Text="0 aliases loaded" 
                           Foreground="#888" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="Import..." 
                        Background="#374151" Foreground="White"
                        Padding="16,6" Margin="0,0,8,0"
                        Click="OnImportClick"/>
                <Button Grid.Column="2" Content="Close" 
                        Background="#374151" Foreground="White"
                        Padding="16,6" Click="OnCloseClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>

