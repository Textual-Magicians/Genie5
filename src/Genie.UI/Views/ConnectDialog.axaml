<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="GenieClient.Views.ConnectDialog"
        Title="Connect to Game"
        Width="400" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1a1a2e">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.Primary">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#e0e0e0"/>
        </Style>
    </Window.Styles>

    <StackPanel Margin="24" Spacing="12">
        <!-- Title -->
        <TextBlock Text="Connect to Simutronics" 
                   FontSize="20" FontWeight="Bold" Foreground="#e94560"
                   Margin="0,0,0,8"/>

        <!-- Game Selection -->
        <StackPanel Spacing="4">
            <TextBlock Text="Game" Foreground="#888" FontSize="12"/>
            <ComboBox x:Name="GameComboBox" HorizontalAlignment="Stretch" SelectedIndex="0">
                <ComboBoxItem Content="DragonRealms" Tag="DR"/>
                <ComboBoxItem Content="DragonRealms Prime" Tag="DRX"/>
                <ComboBoxItem Content="DragonRealms The Fallen" Tag="DRF"/>
                <ComboBoxItem Content="DragonRealms Platinum" Tag="DRP"/>
                <ComboBoxItem Content="DragonRealms Test" Tag="DRT"/>
                <ComboBoxItem Content="GemStone IV" Tag="GS4"/>
                <ComboBoxItem Content="GemStone IV Prime" Tag="GSX"/>
                <ComboBoxItem Content="GemStone IV Platinum" Tag="GSF"/>
            </ComboBox>
        </StackPanel>

        <!-- Account -->
        <StackPanel Spacing="4">
            <TextBlock Text="Account Name" Foreground="#888" FontSize="12"/>
            <TextBox x:Name="AccountTextBox" Watermark="Enter your account name"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Spacing="4">
            <TextBlock Text="Password" Foreground="#888" FontSize="12"/>
            <TextBox x:Name="PasswordTextBox" PasswordChar="â—" Watermark="Enter your password"/>
        </StackPanel>

        <!-- Character (optional) -->
        <StackPanel Spacing="4">
            <TextBlock Text="Character Name (optional)" Foreground="#888" FontSize="12"/>
            <TextBox x:Name="CharacterTextBox" Watermark="Leave empty for character list"/>
        </StackPanel>

        <!-- Help text -->
        <Border Background="#16213e" CornerRadius="4" Padding="12,8" Margin="0,4,0,0">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="ðŸ’¡" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="Leave character name empty to get a list of characters on the account."
                           Foreground="#888" FontSize="11" TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Save Profile Checkbox -->
        <CheckBox x:Name="SaveProfileCheckBox" 
                  Content="Save this profile (including password)" 
                  Margin="0,4,0,0"/>

        <!-- Status message -->
        <TextBlock x:Name="StatusText" 
                   Foreground="#ef4444" FontSize="12" 
                   TextWrapping="Wrap"
                   MinHeight="16"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,8,0,0">
            <Button Content="Cancel" Click="OnCancel"/>
            <Button Classes="Primary" Content="Connect" Click="OnConnect"/>
        </StackPanel>
    </StackPanel>
</Window>
